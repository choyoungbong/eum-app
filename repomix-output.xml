          },
        });
        systemMessage = "í†µí™”ê°€ ì‹œì‘ë˜ì—ˆìŠµë‹ˆë‹¤.";
        break;

      case "reject":
        // ìˆ˜ì‹ ìë§Œ ê±°ì ˆ ê°€ëŠ¥
        if (call.receiverId !== session.user.id) {
          return NextResponse.json(
            { error: "ìˆ˜ì‹ ìë§Œ í†µí™”ë¥¼ ê±°ì ˆí•  ìˆ˜ ìˆìŠµë‹ˆë‹¤" },
            { status: 403 }
