    if (!existsSync(file.filepath)) {
      return NextResponse.json(
        { error: "ì›ë³¸ íŒŒì¼ì„ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤" },
        { status: 404 }
      );
    }

