      }
    } catch (err) {
      console.error("ì±„íŒ…ë°© ëª©ë¡ ë¡œë“œ ì‹¤íŒ¨:", err);
    } finally {
      setLoading(false);
    }
  }, []);

  useEffect(() => {
    if (session) fetchChatRooms();
