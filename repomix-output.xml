    }

    // ê¶Œí•œ í™•ì¸ (ì†Œìœ ì ë˜ëŠ” ê³µìœ ë°›ì€ ì‚¬ìš©ì)
    const isOwner = file.userId === session.user.id;
    
    if (!isOwner) {
      const sharedResource = await prisma.sharedResource.findFirst({
        where: {
          resourceType: "FILE",
