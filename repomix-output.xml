      where: { id: record.userId },
      data: { emailVerified: true },
    });

    // í† í° ì‚­ì œ
    await prisma.emailVerificationToken.delete({ where: { id: record.id } });

    return NextResponse.redirect(
      new URL("/profile?verified=success", request.url)
